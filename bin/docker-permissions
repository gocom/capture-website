#!/usr/bin/env bash

set -e

if [ "$(id -u)" -eq 0 ]; then
  if ! [ "${HOST_GID:-0}" -eq 0 ]; then
    groupmod --gid "$HOST_GID" "$APP_GROUP" 2> /dev/null || true
  fi

  if ! [ "${HOST_UID:-0}" -eq 0 ]; then
    usermod --uid "$HOST_UID" "$APP_USER" 2> /dev/null  || true
  fi

  chown -R "$APP_USER:$APP_GROUP" "$APP_DIRECTORY"
  chown -R "$APP_USER:$APP_GROUP" "$SCREENSHOTS_DIRECTORY"
fi

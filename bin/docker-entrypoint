#!/usr/bin/env bash

docker-permissions 2> /dev/null

if [ "$#" -gt 0 ]; then
  if [[ "$1" == "-"* ]] || ! [ "$(command -v "$1" 2> /dev/null)" ]; then
    if [[ "$1" == "--" ]]; then
      shift 1
    fi

    set -- capture-website "$@"
  fi

  if [ "$1" = "capture-website" ] && [ "$(id -u)" -eq 0 ]; then
    set -- gosu "$APP_USER:$APP_GROUP" "$@"
  fi

  exec "$@"
fi
